#!/usr/bin/make -f
export DH_VERBOSE=1

include /usr/share/cli-common/cli.make

configure: configure-stamp
configure-stamp:
	dh_testdir
	./configure --prefix=/usr --config=GNOME_RELEASE
	touch configure-stamp

build: configure-stamp
	dh $@ --after configure

install: build
	dh $@

binary: binary-indep
binary-indep: build install
	dh $@

clean: configure-stamp
	dh $@
	rm -f config.log
